# ============================================
# AI Recommendation Service - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# 
# Windows: copy env.example .env
# Linux/Mac: cp env.example .env

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Required for training model
# 
# Lưu ý khi dùng Docker:
# - Windows/Mac: DB_HOST=host.docker.internal hoặc localhost
# - Linux: DB_HOST=host.docker.internal hoặc IP của host (172.17.0.1)
# - Manual setup: DB_HOST=localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# ============================================
# Redis Configuration
# ============================================
# Lưu ý khi dùng Docker:
# - Windows/Mac: REDIS_HOST=host.docker.internal hoặc localhost
# - Linux: REDIS_HOST=host.docker.internal hoặc IP của host (172.17.0.1)
# - Manual setup: REDIS_HOST=localhost
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_PREFIX=rec
REDIS_TTL=604800

# ============================================
# Model Configuration
# ============================================
# Relative path to model directory (relative to script location)
# Model sẽ được lưu vào: {script_dir}/model/ials_model_and_meta.pkl
MODEL_DIR=model

# ============================================
# API Service Configuration
# ============================================
API_PORT=5000
LOG_LEVEL=INFO

# ============================================
# Training Configuration (Optional - có thể override bằng CLI args)
# ============================================
# ALS Model Parameters
ALS_FACTORS=64
ALS_REG=0.01
ALS_ITERS=20
ALS_THREADS=0

# Training Parameters
IMPL_ALPHA=10
TOP_N=10

# Action Weights (comma-separated: ACTION=weight)
# Format: VIEW=1,ADD_TO_CART=5,LIKE=3,PURCHASE=8
ACTION_WEIGHTS=VIEW=1,ADD_TO_CART=5,LIKE=3,PURCHASE=8

